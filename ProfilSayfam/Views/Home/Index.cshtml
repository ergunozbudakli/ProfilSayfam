@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Ergün ÖZBUDAKLI - Full Stack .NET Developer | Format Converter Tool";
    ViewData["Description"] = "Full Stack .NET Developer with expertise in web development. Creator of Format Converter - a professional PDF to Word conversion tool. Experienced in C#, .NET Core, Angular, and SQL Server.";
    ViewData["Keywords"] = "format converter, pdf to word, .net developer, full stack developer, web development, c#, angular, sql server, izmir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <!-- SEO Meta Tags -->
    <meta name="description" content="@ViewData["Description"]">
    <meta name="keywords" content="@ViewData["Keywords"]">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://ergunozbudakli.com/">
    <meta property="og:title" content="@ViewData["Title"]">
    <meta property="og:description" content="@ViewData["Description"]">
    <meta property="og:image" content="~/assets/images/preview.jpg">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://ergunozbudakli.com/">
    <meta property="twitter:title" content="@ViewData["Title"]">
    <meta property="twitter:description" content="@ViewData["Description"]">
    <meta property="twitter:image" content="~/assets/images/preview.jpg">

    <!-- Canonical URL -->
    <link rel="canonical" href="https://ergunozbudakli.com/" />

    <!-- Structured Data / Schema.org -->
    <script type="application/ld+json">
    {
        "@@context": "http://schema.org",
        "@@type": "Person",
        "name": "Ergün ÖZBUDAKLI",
        "jobTitle": "Full Stack .NET Developer",
        "url": "https://ergunozbudakli.com",
        "sameAs": [
            "https://linkedin.com/in/ergunozbudakli",
            "https://github.com/ergunozbudakli"
        ],
        "mainEntityOfPage": {
            "@@type": "WebPage",
            "@@id": "https://ergunozbudakli.com"
        }
    }
    </script>

    <script type="application/ld+json">
    {
        "@@context": "http://schema.org",
        "@@type": "SoftwareApplication",
        "name": "Format Converter",
        "applicationCategory": "WebApplication",
        "operatingSystem": "Web Browser",
        "description": "Professional PDF to Word conversion tool with high accuracy and user-friendly interface.",
        "offers": {
            "@@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
        }
    }
    </script>

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/plugins/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="~/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        /* Animasyon stilleri */
        .animate-on-load {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease-out;
        }

        .animate-on-load.show {
            opacity: 1;
            transform: translateY(0);
        }

        /* Animasyon gecikmeleri */
        .delay-1 { transition-delay: 0.2s; }
        .delay-2 { transition-delay: 0.4s; }
        .delay-3 { transition-delay: 0.6s; }
        .delay-4 { transition-delay: 0.8s; }

        body section[id="about"] .title h3 {
            color: #E31C25 !important;
            margin-bottom: 1rem !important;
            font-weight: 600 !important;
        }

        body section[id="about"] .title p {
            color: #9e9e9e !important;
            line-height: 1.6 !important;
            margin-bottom: 1rem !important;
        }
        
        body section[id="about"] .wrapper {
            display: flex !important;
            min-height: 100vh !important;
        }
        
        body section[id="about"] .left-wrapper,
        body section[id="about"] .right-wrapper {
            flex: 1 !important;
            position: relative !important;
            height: 100% !important;
        }
        
        body section[id="about"] .right-wrapper .content {
            position: absolute !important;
            top: 50% !important;
            transform: translateY(-50%) !important;
            width: 100% !important;
            padding: 2rem !important;
        }
        
        body section[id="about"] .right-wrapper .content .title {
            text-align: left !important;
        }

        /* Contact Form Styles */
        .contact-form-wrapper {
            background: rgba(19, 19, 19, 0.95);
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .form-floating {
            position: relative;
            margin-bottom: 1rem;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            padding: 0.75rem 1rem;
            height: auto;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-floating label {
            color: rgba(255, 255, 255, 0.6);
            padding: 0.75rem 1rem;
            height: auto;
            transform-origin: 0 0;
            transition: opacity .1s ease-in-out,transform .1s ease-in-out;
            position: absolute;
            top: 0;
            left: 0;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: #fff;
            transform: scale(0.85) translateY(-0.75rem);
            background: rgba(19, 19, 19, 0.95);
            padding: 0 0.5rem;
            margin-left: 0.5rem;
            opacity: 1;
        }

        .form-floating > .form-control {
            height: 3.5rem;
        }

        .form-floating > textarea.form-control {
            height: 120px;
        }

        textarea.form-control {
            min-height: 120px;
            resize: none;
        }

        .btn-send {
            background: #E31C25;
            color: #fff;
            border: none;
            padding: 1rem 2.5rem;
            font-size: 1rem;
            border-radius: 30px;
            transition: all 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn-send:hover {
            background: #ff1f2a;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(227, 28, 37, 0.3);
        }

        .btn-send i {
            transition: transform 0.3s ease;
        }

        .btn-send:hover i {
            transform: translateX(5px);
        }

        /* Format Dönüştürücü Buton Stilleri */
        .btn-format-converter {
            background: #E31C25;
            color: #fff;
            border: none;
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            border-radius: 30px;
            transition: all 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            box-shadow: 0 4px 15px rgba(227, 28, 37, 0.2);
        }

        .btn-format-converter:hover {
            background: #ff1f2a;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(227, 28, 37, 0.3);
            color: #fff;
        }

        .btn-format-converter i {
            transition: transform 0.3s ease;
        }

        .btn-format-converter:hover i {
            transform: translateX(8px);
        }

        /* Proje Kartı Stilleri */
        .project-card {
            background: rgba(25, 25, 25, 0.95);
            padding: 2.5rem;
            border-radius: 20px;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
        }

        @@media screen and (max-width: 767.98px) {
            .project-card {
                padding: 1.5rem;
                margin-bottom: 1rem;
            }

            .project-card h3 {
                font-size: 1.25rem !important;
                margin-bottom: 1rem !important;
            }

            .project-card p {
                font-size: 0.9rem !important;
                margin-bottom: 1.5rem !important;
                line-height: 1.4 !important;
            }

            .project-card .features-list {
                display: flex;
                flex-direction: column;
                gap: 0.75rem;
                margin-bottom: 1.5rem !important;
            }

            .project-card .feature-item {
                display: flex !important;
                align-items: center !important;
                margin-right: 0 !important;
            }

            .btn-format-converter {
                width: 100%;
                padding: 0.875rem !important;
                font-size: 1rem !important;
            }
        }

        .project-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(227, 28, 37, 0.1), transparent);
            opacity: 0;
            transition: all 0.3s ease;
        }

        .project-card:hover::before {
            opacity: 1;
        }

        .project-card h3 {
            color: #fff;
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
            position: relative;
        }

        .project-card p {
            color: #9e9e9e;
            margin-bottom: 2.5rem;
            line-height: 1.6;
            font-size: 1.1rem;
            position: relative;
        }

        .project-card .btn-format-converter {
            position: relative;
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        @@media screen and (max-width: 767.98px) {
            #reference-projects {
                padding: 2rem 0 0 0 !important;
                margin-bottom: 0 !important;
            }

            #reference-projects .section-title {
                margin-bottom: 1.5rem !important;
            }

            #reference-projects .project-cards {
                margin-bottom: 0 !important;
            }

            #reference-projects .project-card {
                margin-bottom: 1rem !important;
            }

            #reference-projects .project-card:last-child {
                margin-bottom: 0 !important;
                border-bottom: none !important;
            }

            .social-links {
                padding-top: 1rem !important;
                margin-top: 0 !important;
                background: #000 !important;
            }

            .social-links .container {
                padding-top: 1rem !important;
                border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tüm animate-on-load elementlerini seç
            const elements = document.querySelectorAll('.animate-on-load');
            
            // Her elemente show class'ını ekle
            elements.forEach(element => {
                element.classList.add('show');
            });
        });
    </script>
}

