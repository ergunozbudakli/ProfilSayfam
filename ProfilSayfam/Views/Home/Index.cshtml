                                    <label for="MailInput">E-Mail</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="SubjectInput" required>
                                    <label for="SubjectInput">@Localizer["Subject"]</label>
